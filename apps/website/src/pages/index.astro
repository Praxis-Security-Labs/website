---
import BaseLayout from '../layouts/BaseLayout.astro';
import { HeroSection } from '../components/sections/HeroSection';
import { AuthoritySection } from '../components/sections/AuthoritySection';
import { ProblemSolutionSection } from '../components/sections/ProblemSolutionSection';
import { SocialProofSection } from '../components/sections/SocialProofSection';
import { TrialCallToActionSection } from '../components/sections/TrialCallToActionSection';

// SEO Configuration
const title = 'Security Behavior Monitoring | Praxis Navigator by Kai Roer';
const description =
  'Measure actual security behaviors with Microsoft Graph API monitoring. Stop guessing, start measuring. Evidence-based security culture improvement by security expert Kai Roer.';
const keywords =
  'security behavior monitoring, SAT effectiveness, Microsoft Graph security, security culture measurement, behavioral analytics, Kai Roer, security training ROI';

// Structured Data for Homepage
const homepageSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Praxis Navigator',
  applicationCategory: 'Security Software',
  operatingSystem: 'Microsoft 365',
  description: description,
  author: {
    '@type': 'Person',
    name: 'Kai Roer',
    jobTitle: 'Security Culture Expert',
    url: 'https://praxisnavigator.io/about/kai-roer',
  },
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
    description: 'Free trial available',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.8',
    bestRating: '5',
    worstRating: '1',
    ratingCount: '47',
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  pageType="homepage"
  structuredData={homepageSchema}
  ogImage="/images/og-praxis-navigator-homepage.png"
  ogType="website"
>
  <HeroSection language="en" client:load />
  <AuthoritySection language="en" />
  <ProblemSolutionSection language="en" />
  <SocialProofSection language="en" />
  <TrialCallToActionSection language="en" />
</BaseLayout>
