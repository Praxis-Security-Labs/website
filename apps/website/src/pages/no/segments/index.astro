---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title =
  'For Din Rolle - Sikkerheitsløsninger etter Segment | Praxis Navigator';
const description =
  'Skreddersydde sikkerheitsatferd overvåkningsløsninger for Sikkerheitsledere, Ledelse, Mellomledere, og SAT-team. Finn rett tilnærming for din rolle og organisasjonsstørrelse.';
const keywords =
  'sikkerheitsløsninger etter rolle, CISO løsninger, ledelses sikkerhet, lederverktøy, SAT team ressurser, sikkerheitskultur etter segment';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Sikkerheitsløsninger etter Rolle',
  description: description,
  inLanguage: 'no',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Sikkerheitsledere & CISOs',
        description:
          'Bedriftsnivå sikkerheitskultur måling og ROI rapportering',
        url: '/no/segments/security-leaders',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Styre & Ledelse',
        description: 'Strategisk tilsyn og risikokommunikasjon verktøy',
        url: '/no/segments/executives',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: 'Mellomledere',
        description: 'Team prestasjon overvåking og trenings effektivitet',
        url: '/no/segments/managers',
      },
      {
        '@type': 'ListItem',
        position: 4,
        name: 'SAT Team',
        description: 'Teknisk implementering og atferdsanalyse verktøy',
        url: '/no/segments/sat-teams',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
  pageType="segment-index"
  lang="no"
>
  <main>
    {/* Hero Section */}
    <section
      class="bg-gradient-to-b from-praxis-dark-blue to-praxis-dark-blue-800 text-white py-20"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6"
          >
            Løsninger <span class="text-praxis-gold">For Din Rolle</span>
          </h1>
          <p class="text-xl text-praxis-light-blue max-w-3xl mx-auto mb-8">
            Sikkerheitsatferd overvåking tilpasset ditt ansvar og organisasjons
            behov. Fra ledelsens tilsyn til teknisk implementering.
          </p>
        </div>
      </div>
    </section>

    {/* Segments Grid */}
    <section class="py-20 bg-praxis-light-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Security Leaders & CISOs */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-gold rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-praxis-dark-blue"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Sikkerheitsledere & CISOs
              </h3>
              <p class="text-praxis-gray mb-6">
                Bedriftsnivå sikkerheitskultur måling med styreklar ROI
                rapportering for 500-10,000+ ansatte organisasjoner.
              </p>
              <a
                href="/no/segments/security-leaders"
                class="btn-primary w-full text-center block"
              >
                Utforsk Løsninger
              </a>
            </div>
          </div>

          {/* Board & Executives */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-blue rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Styre & Ledelse
              </h3>
              <p class="text-praxis-gray mb-6">
                Strategiske tilsynsverktøy og ledelseskommunikasjon for
                risikobasert sikkerheitsstyring.
              </p>
              <a
                href="/segments/executives"
                class="btn-primary w-full text-center block"
              >
                Utforsk Løsninger
              </a>
            </div>
          </div>

          {/* Mid-Level Managers */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-green rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zM4 18v-6h3v7c0 .55.45 1 1 1h9c.55 0 1-.45 1-1v-7h3v6h4v2H0v-2h4z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Mellomledere
              </h3>
              <p class="text-praxis-gray mb-6">
                Team prestasjon overvåking og trenings effektivitet måling for
                operasjonell fortreffelighet.
              </p>
              <a
                href="/segments/managers"
                class="btn-primary w-full text-center block"
              >
                Utforsk Løsninger
              </a>
            </div>
          </div>

          {/* SAT Teams */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-purple rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                SAT Team
              </h3>
              <p class="text-praxis-gray mb-6">
                Tekniske implementeringsguider, API integrering, og
                atferdsanalyse ressurser.
              </p>
              <a
                href="/segments/sat-teams"
                class="btn-primary w-full text-center block"
              >
                Utforsk Løsninger
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-praxis-dark-blue py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-white mb-6">
          Klar til å Begynne?
        </h2>
        <p class="text-xl text-praxis-light-blue mb-8">
          Finn rett løsning for din rolle og start å måle sikkerheitsatferd i
          dag.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/no/contact" class="btn-accent"> Bestill Demo</a>
          <a href="/no/pricing" class="btn-secondary"> Se Priser</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
