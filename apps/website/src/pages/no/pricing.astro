---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { PricingHeroSection } from '../../components/sections/PricingHeroSection';
import { PricingTableSection } from '../../components/sections/PricingTableSection';
import { FeatureComparisonSection } from '../../components/sections/FeatureComparisonSection';
import { TrialCallToActionSection } from '../../components/sections/TrialCallToActionSection';
import { EnterpriseContactSection } from '../../components/sections/EnterpriseContactSection';

const title = 'Priser & Gratis Prøveversjon - Praxis Navigator';
const description =
  'Transparente priser for måling av virksomhetens sikkerhetskultur. Start din 30-dagers gratis prøveversjon på Azure Marketplace. Abonnementer fra €0,80 per ansatt per måned.';
const keywords =
  'praxis navigator priser, sikkerhetskultur priser, azure marketplace prøveversjon, virksomhet sikkerhetsprogramvare priser, cybersikkerhet trening priser';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: 'Praxis Navigator',
  description:
    'Virksomhet sikkerhetskultur måling og atferdsovervåking plattform',
  brand: {
    '@type': 'Brand',
    name: 'Praxis Navigator',
  },
  offers: [
    {
      '@type': 'Offer',
      name: 'Liten Virksomhet',
      price: '199',
      priceCurrency: 'EUR',
      priceSpecification: {
        '@type': 'PriceSpecification',
        price: '199',
        priceCurrency: 'EUR',
        billingDuration: 'P1M',
        description: 'Opptil 199 ansatte',
      },
      availability: 'https://schema.org/InStock',
      seller: {
        '@type': 'Organization',
        name: 'Praxis Navigator',
      },
    },
    {
      '@type': 'Offer',
      name: 'Medium Virksomhet',
      price: '249',
      priceCurrency: 'EUR',
      priceSpecification: {
        '@type': 'PriceSpecification',
        price: '249',
        priceCurrency: 'EUR',
        billingDuration: 'P1M',
        description: '200+ ansatte, startpris',
      },
      availability: 'https://schema.org/InStock',
      seller: {
        '@type': 'Organization',
        name: 'Praxis Navigator',
      },
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  lang="no"
  structuredData={structuredData}
  pageType="content"
>
  <PricingHeroSection client:load />
  <PricingTableSection client:load />
  <FeatureComparisonSection client:load />
  <TrialCallToActionSection client:load />
  <EnterpriseContactSection client:load />
</BaseLayout>
