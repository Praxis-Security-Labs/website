---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Sikkerheitskultur Ressurser & Forskning | Praxis Navigator';
const description =
  'Få tilgang til omfattende sikkerheitskultur ressurser, forskningspapirer, implementeringsguider og verktøy. Lær fra 25+ år med sikkerheitsatferd forskning og praktisk anvendelse.';
const keywords =
  'sikkerheitskultur ressurser, sikkerheitsatferd forskning, implementeringsguider, sikkerheitsbevissthet verktøy, kultumålings ressurser, ENISA rammeverk';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Sikkerheitskultur Ressurser',
  description: description,
  inLanguage: 'no',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Forskning & Hvitbøker',
        description:
          'Akademisk forskning og industrielle innsikter om sikkerheitskultur måling',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Implementeringsguider',
        description:
          'Steg-for-steg guider for implementering av sikkerheitsatferd overvåking',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: 'Verktøy & Maler',
        description:
          'Praktiske verktøy og maler for sikkerheitskultur vurdering',
      },
      {
        '@type': 'ListItem',
        position: 4,
        name: 'Case-studier',
        description: 'Virkelighets suksesshistorier og leksjoner lært',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
  pageType="resources"
  lang="no"
>
  <main>
    {/* Hero Section */}
    <section
      class="bg-gradient-to-b from-praxis-dark-blue to-praxis-dark-blue-800 text-white py-20"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6"
          >
            Sikkerheitskultur <span class="text-praxis-gold">Ressurser</span>
          </h1>
          <p class="text-xl text-praxis-light-blue mb-8">
            Få tilgang til vårt omfattende bibliotek med forskning, guider,
            verktøy og innsikter fra 25+ års banebrytende arbeid innen
            sikkerheitskultur måling.
          </p>
        </div>
      </div>
    </section>

    {/* Resource Categories */}
    <section class="py-20 bg-praxis-light-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Research & Whitepapers */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-blue rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Forskning & Hvitbøker
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Akademisk forskning, industrirapporter og fagfellevurderte
              innsikter om sikkerheitskultur måling.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Sikkerheitskultur Rammeverk
                </h4>
                <p class="text-xs text-praxis-gray">
                  Det ENISA-adopterte rammeverket for måling av
                  sikkerheitskultur
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Sikkerheitsatferd Forskning
                </h4>
                <p class="text-xs text-praxis-gray">
                  25+ år med akademisk forskning og funn
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Microsoft Graph Integrering
                </h4>
                <p class="text-xs text-praxis-gray">
                  Teknisk hvitbok om API-basert overvåking
                </p>
              </div>
            </div>
          </div>

          {/* Implementation Guides */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-green rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Implementeringsguider
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Steg-for-steg guider for implementering av sikkerheitsatferd
              overvåking i din organisasjon.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Kom i Gang Guide
                </h4>
                <p class="text-xs text-praxis-gray">
                  Essensielle første steg for sikkerheitskultur måling
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Microsoft Graph Oppsett
                </h4>
                <p class="text-xs text-praxis-gray">
                  Teknisk implementering for API integrering
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Beste Praksis
                </h4>
                <p class="text-xs text-praxis-gray">
                  Bevist metodikker for vellykket utplassering
                </p>
              </div>
            </div>
          </div>

          {/* Tools & Templates */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-purple rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Verktøy & Maler
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Praktiske verktøy, maler og kalkulatorer for sikkerheitskultur
              vurdering og forbedring.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  ROI Kalkulator
                </h4>
                <p class="text-xs text-praxis-gray">
                  Beregn avkastningen på sikkerheitskultur investering
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Vurderingsmaler
                </h4>
                <p class="text-xs text-praxis-gray">
                  Klare-til-bruk maler for kultur evaluering
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Rapporterings Dashboards
                </h4>
                <p class="text-xs text-praxis-gray">
                  Ledelse og operasjonelle rapporteringsmaler
                </p>
              </div>
            </div>
          </div>

          {/* Case Studies */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-gold rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-praxis-dark-blue"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zM4 18v-6h3v7c0 .55.45 1 1 1h9c.55 0 1-.45 1-1v-7h3v6h4v2H0v-2h4z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Case-studier
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Virkelige suksesshistorier og leksjoner lært fra organisasjoner
              som implementerer sikkerheitskultur måling.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Fortune 500 Implementering
                </h4>
                <p class="text-xs text-praxis-gray">
                  10,000+ ansatte utplassering case-studie
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Mellomstore Suksess
                </h4>
                <p class="text-xs text-praxis-gray">
                  500-2,000 ansatte organisasjon transformasjon
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Regulatorisk Compliance
                </h4>
                <p class="text-xs text-praxis-gray">
                  Oppfylle compliance krav med måling
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Newsletter & Updates */}
    <section class="py-20 bg-praxis-dark-blue text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold mb-6">
          Hold Deg Oppdatert med Nye Ressurser
        </h2>
        <p class="text-xl text-praxis-light-blue mb-8">
          Få den nyeste forskningen, verktøyene og innsiktene levert til din
          innboks. Bli med tusenvis av sikkerhetsprofesjonelle som fremmer sine
          kulturprogrammer.
        </p>

        <div class="max-w-md mx-auto mb-8">
          <form class="flex flex-col sm:flex-row gap-3">
            <input
              type="email"
              placeholder="Skriv inn din e-postadresse"
              class="flex-grow px-4 py-3 rounded-lg text-praxis-dark-blue"
              required
              aria-label="E-postadresse for ressursoppdateringer"
            />
            <button
              type="submit"
              class="btn-accent px-6 py-3 whitespace-nowrap"
              aria-label="Abonner på ressursoppdateringer"
            >
              Abonner
            </button>
          </form>
        </div>

        <p class="text-sm text-praxis-light-blue">
          Ingen spam, aldri. Avmeld når som helst. Personvernerklæring gjelder.
        </p>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-16 bg-praxis-light-gray">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-praxis-dark-blue mb-6">
          Klar til å Implementere Disse Ressursene?
        </h2>
        <p class="text-xl text-praxis-gray mb-8">
          Gjør forskning om til handling med Praxis Navigators omfattende
          plattform.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/no/contact" class="btn-accent"> Bestill Konsultasjon</a>
          <a href="/no/pricing" class="btn-secondary"> Se Plattform Priser</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
