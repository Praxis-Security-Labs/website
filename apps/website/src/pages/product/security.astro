---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url); // Will be 'en'

// SEO Configuration for Security Page
const title =
  'Security & Compliance | Praxis Navigator Enterprise-Grade Security Controls';
const description =
  'Comprehensive overview of Praxis Navigator security architecture including SOC2 Type II certification, GDPR compliance, privacy-first design, and enterprise security controls for behavioral monitoring.';
const keywords =
  'Praxis Navigator security, SOC2 Type II certification, GDPR compliance, enterprise security controls, behavioral monitoring security, Microsoft Graph API security, privacy-first architecture, zero trust security';

// Structured Data for Security Information
const securitySchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Security & Compliance Documentation',
  description: description,
  url: 'https://praxisnavigator.io/product/security',
  about: {
    '@type': 'Thing',
    name: 'Enterprise Security Compliance',
    description:
      'Comprehensive security and compliance framework for behavioral monitoring',
  },
};

// Breadcrumb Schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://praxisnavigator.io',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Product',
      item: 'https://praxisnavigator.io/product',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: 'Security',
      item: 'https://praxisnavigator.io/product/security',
    },
  ],
};

// Combine structured data
const combinedSchema = {
  '@context': 'https://schema.org',
  '@graph': [securitySchema, breadcrumbSchema],
} as Record<string, unknown>;
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  pageType="product"
  structuredData={combinedSchema}
  ogImage="/images/product/security-og.png"
  ogType="website"
  lang={lang}
>
  <!-- Breadcrumb Navigation -->
  <nav
    aria-label="Breadcrumb"
    class="bg-praxis-gray-50 border-b border-praxis-gray-200"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a
            href="/"
            class="text-praxis-brown hover:text-praxis-dark-blue transition-colors"
          >
            Home
          </a>
        </li>
        <li class="text-praxis-gray">
          <span aria-hidden="true">/</span>
        </li>
        <li>
          <a
            href="/product"
            class="text-praxis-brown hover:text-praxis-dark-blue transition-colors"
          >
            Product
          </a>
        </li>
        <li class="text-praxis-gray">
          <span aria-hidden="true">/</span>
        </li>
        <li aria-current="page" class="text-praxis-dark-blue font-medium">
          Security
        </li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-b from-praxis-blue to-praxis-sky">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
