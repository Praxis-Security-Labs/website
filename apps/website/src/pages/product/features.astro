  'Platform Features | Praxis Navigator Behavioral Security Monitoring';
const description =
  'Comprehensive overview of Praxis Navigator features including behavioral monitoring, risk scoring, compliance reporting, executive dashboards, and Microsoft Graph API integration.';
const keywords =
  'Praxis Navigator features, behavioral security monitoring features, Microsoft Graph API features, risk scoring engine, compliance reporting, executive dashboards, security analytics platform';

// Structured Data for Software Features
const softwareSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Praxis Navigator Platform Features',
  applicationCategory: 'Security Software',
  description: description,
  featureList: [
    'Behavioral Monitoring',
    'Risk Scoring Engine',
    'Compliance Reporting',
    'Executive Dashboards',
    'Trend Analysis',
    'Alert System',
    'Microsoft Graph API Integration',
    'Enterprise Security Controls',
  ],
  url: 'https://praxisnavigator.io/product/features',
};

// Breadcrumb Schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://praxisnavigator.io',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Product',
      item: 'https://praxisnavigator.io/product',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: 'Features',
      item: 'https://praxisnavigator.io/product/features',
    },
  ],
};

// Combine structured data
const combinedSchema = {
  '@context': 'https://schema.org',
  '@graph': [softwareSchema, breadcrumbSchema],
} as Record<string, unknown>;
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
