---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url); // Will be 'en'

const title =
  'For Your Role - Security Solutions by Segment | Praxis Navigator';
const description =
  'Tailored security behavior monitoring solutions for Security Leaders, Executives, Managers, and SAT Teams. Find the right approach for your role and organization size.';
const keywords =
  'security solutions by role, CISO solutions, executive security, manager tools, SAT team resources, security culture by segment';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Security Solutions by Role',
  description: description,
  inLanguage: 'en-US',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Security Leaders & CISOs',
        description: 'ROI measurement and board-ready reporting',
        url: '/segments/security-leaders',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Board Members & Executives',
        description: 'Business risk translation and governance',
        url: '/segments/executives',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: 'Department Managers',
        description: 'Team performance visibility and benchmarking',
        url: '/segments/managers',
      },
      {
        '@type': 'ListItem',
        position: 4,
        name: 'SAT Teams & Training Coordinators',
        description: 'Training effectiveness and program optimization',
        url: '/segments/sat-teams',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  lang={lang}
  structuredData={structuredData}
  pageType="content"
>
  <main>
    {/* Hero Section */}
    <section
      class="bg-gradient-to-b from-praxis-dark-blue to-praxis-dark-blue-800 text-white py-20"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6"
          >
            Solutions <span class="text-praxis-gold">For Your Role</span>
