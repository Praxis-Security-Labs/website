---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title =
  'For Your Role - Security Solutions by Segment | Praxis Navigator';
const description =
  'Tailored security behavior monitoring solutions for Security Leaders, Executives, Managers, and SAT Teams. Find the right approach for your role and organization size.';
const keywords =
  'security solutions by role, CISO solutions, executive security, manager tools, SAT team resources, security culture by segment';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Security Solutions by Role',
  description: description,
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Security Leaders & CISOs',
        description:
          'Enterprise-grade security culture measurement and ROI reporting',
        url: '/segments/security-leaders',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Board & Executives',
        description: 'Strategic oversight and risk communication tools',
        url: '/segments/executives',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: 'Mid-Level Managers',
        description: 'Team performance monitoring and training effectiveness',
        url: '/segments/managers',
      },
      {
        '@type': 'ListItem',
        position: 4,
        name: 'SAT Teams',
        description: 'Technical implementation and behavior analysis tools',
        url: '/segments/sat-teams',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
  pageType="segment-index"
>
  <main>
    {/* Hero Section */}
    <section
      class="bg-gradient-to-b from-praxis-dark-blue to-praxis-dark-blue-800 text-white py-20"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6"
          >
            Solutions <span class="text-praxis-gold">For Your Role</span>
          </h1>
          <p class="text-xl text-praxis-light-blue max-w-3xl mx-auto mb-8">
            Security behavior monitoring tailored to your responsibilities and
            organizational needs. From executive oversight to technical
            implementation.
          </p>
        </div>
      </div>
    </section>

    {/* Segments Grid */}
    <section class="py-20 bg-praxis-light-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Security Leaders & CISOs */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-gold rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-praxis-dark-blue"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Security Leaders & CISOs
              </h3>
              <p class="text-praxis-gray mb-6">
                Enterprise security culture measurement with board-ready ROI
                reports for 500-10,000+ employee organizations.
              </p>
              <a
                href="/segments/security-leaders"
                class="btn-primary w-full text-center block"
              >
                Explore Solutions
              </a>
            </div>
          </div>

          {/* Board & Executives */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-blue rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Board & Executives
              </h3>
              <p class="text-praxis-gray mb-6">
                Strategic oversight tools and executive communication for
                risk-based security governance.
              </p>
              <a
                href="/segments/executives"
                class="btn-primary w-full text-center block"
              >
                Explore Solutions
              </a>
            </div>
          </div>

          {/* Mid-Level Managers */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-green rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zM4 18v-6h3v7c0 .55.45 1 1 1h9c.55 0 1-.45 1-1v-7h3v6h4v2H0v-2h4z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                Mid-Level Managers
              </h3>
              <p class="text-praxis-gray mb-6">
                Team performance monitoring and training effectiveness
                measurement for operational excellence.
              </p>
              <a
                href="/segments/managers"
                class="btn-primary w-full text-center block"
              >
                Explore Solutions
              </a>
            </div>
          </div>

          {/* SAT Teams */}
          <div
            class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-8"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 bg-praxis-purple rounded-full flex items-center justify-center mx-auto mb-6"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl font-heading font-bold text-praxis-dark-blue mb-4"
              >
                SAT Teams
              </h3>
              <p class="text-praxis-gray mb-6">
                Technical implementation guides, API integration, and behavioral
                analysis resources.
              </p>
              <a
                href="/segments/sat-teams"
                class="btn-primary w-full text-center block"
              >
                Explore Solutions
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-praxis-dark-blue py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-white mb-6">
          Ready to Get Started?
        </h2>
        <p class="text-xl text-praxis-light-blue mb-8">
          Find the right solution for your role and start measuring security
          behaviors today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-accent"> Schedule a Demo</a>
          <a href="/pricing" class="btn-secondary"> View Pricing</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
