---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SecurityComplianceSection } from '../../components/sections/SecurityComplianceSection';
import { DataResidencySection } from '../../components/sections/DataResidencySection';
import { ComplianceContactSection } from '../../components/sections/ComplianceContactSection';

// SEO and meta configuration
const title = 'Enterprise Compliance Hub | Praxis Navigator';
const description =
  'Comprehensive compliance documentation for enterprise customers. SOC2 Type II, GDPR, ISO 27001 certifications and security frameworks for Praxis Navigator.';
const keywords =
  'enterprise compliance, SOC2 Type II, GDPR compliance, ISO 27001, security frameworks, data residency, vendor risk assessment';

// Structured data for compliance page
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Enterprise Compliance Hub',
  description: description,
  isPartOf: {
    '@type': 'WebSite',
    name: 'Praxis Navigator',
    url: 'https://praxisnavigator.io',
  },
  mainEntity: {
    '@type': 'Organization',
    name: 'Praxis Navigator',
    description:
      'Enterprise security training platform with comprehensive compliance frameworks',
    hasCredential: [
      {
        '@type': 'EducationalOccupationalCredential',
        name: 'SOC2 Type II',
        description:
          'Service Organization Control 2 Type II certification for security and availability',
      },
      {
        '@type': 'EducationalOccupationalCredential',
        name: 'ISO 27001',
        description: 'Information security management system certification',
      },
      {
        '@type': 'EducationalOccupationalCredential',
        name: 'GDPR Compliance',
        description:
          'General Data Protection Regulation compliance certification',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
  pageType="content"
>
  <div class="bg-praxis-white">
    <!-- Hero Section -->
    <section class="bg-praxis-dark-blue py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="h1 text-praxis-white mb-6">Enterprise Compliance Hub</h1>
        <p class="text-xl text-praxis-tan max-w-3xl mx-auto leading-relaxed">
          Comprehensive security certifications, compliance frameworks, and
          documentation to support your vendor risk assessment and regulatory
          requirements.
        </p>

        <!-- Trust Indicators -->
        <div
          class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto"
        >
          <div class="bg-praxis-white bg-opacity-10 rounded-lg p-6">
            <div class="text-praxis-gold text-4xl mb-4">üõ°Ô∏è</div>
            <h3 class="h6 text-praxis-white mb-2">SOC2 Type II</h3>
            <p class="body-small text-praxis-tan">
              Annual security audit compliance
            </p>
          </div>
          <div class="bg-praxis-white bg-opacity-10 rounded-lg p-6">
            <div class="text-praxis-gold text-4xl mb-4">üåç</div>
            <h3 class="h6 text-praxis-white mb-2">GDPR Compliant</h3>
            <p class="body-small text-praxis-tan">
              EU data protection standards
            </p>
          </div>
          <div class="bg-praxis-white bg-opacity-10 rounded-lg p-6">
            <div class="text-praxis-gold text-4xl mb-4">‚ö°</div>
            <h3 class="h6 text-praxis-white mb-2">ISO 27001</h3>
            <p class="body-small text-praxis-tan">
              Information security management
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Compliance Section -->
    <SecurityComplianceSection client:load />

    <!-- Data Residency Section -->
    <DataResidencySection client:load />

    <!-- Compliance Contact Section -->
    <ComplianceContactSection client:load />

    <!-- Download Center -->
    <section class="py-16 lg:py-24 bg-praxis-off-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="h2 text-praxis-dark-blue mb-4">
            Compliance Documentation
          </h2>
          <p class="text-xl text-praxis-gray-600 max-w-3xl mx-auto">
            Download comprehensive compliance documents to support your vendor
            risk assessment and regulatory compliance processes.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Security Whitepaper -->
          <div
            class="bg-praxis-white rounded-lg p-6 shadow-sm border border-praxis-gray-200"
          >
            <div class="text-praxis-dark-blue text-3xl mb-4">üìÑ</div>
            <h3 class="h6 text-praxis-dark-blue mb-3">Security Whitepaper</h3>
            <p class="body-base text-praxis-gray-600 mb-4">
              Comprehensive overview of our security architecture, data
              protection measures, and compliance frameworks.
            </p>
            <div class="flex items-center justify-between">
              <span class="body-small text-praxis-gray-500">PDF ‚Ä¢ 2.1 MB</span>
              <a
                href="/downloads/praxis-navigator-security-whitepaper.pdf"
                class="btn-primary text-sm"
                target="_blank"
                rel="noopener noreferrer"
              >
                Download
              </a>
            </div>
          </div>

          <!-- SOC2 Report -->
          <div
            class="bg-praxis-white rounded-lg p-6 shadow-sm border border-praxis-gray-200"
