---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Security Culture Resources & Research | Praxis Navigator';
const description =
  'Access comprehensive security culture resources, research papers, implementation guides, and tools. Learn from 25+ years of behavioral security research and practical application.';
const keywords =
  'security culture resources, behavioral security research, implementation guides, security awareness tools, culture measurement resources, ENISA framework';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Security Culture Resources',
  description: description,
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Research & Whitepapers',
        description:
          'Academic research and industry insights on security culture measurement',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Implementation Guides',
        description:
          'Step-by-step guides for implementing security behavior monitoring',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: 'Tools & Templates',
        description:
          'Practical tools and templates for security culture assessment',
      },
      {
        '@type': 'ListItem',
        position: 4,
        name: 'Case Studies',
        description: 'Real-world success stories and lessons learned',
      },
    ],
  },
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  structuredData={structuredData}
  pageType="resources"
>
  <main>
    {/* Hero Section */}
    <section
      class="bg-gradient-to-b from-praxis-dark-blue to-praxis-dark-blue-800 text-white py-20"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6"
          >
            Security Culture <span class="text-praxis-gold">Resources</span>
          </h1>
          <p class="text-xl text-praxis-light-blue mb-8">
            Access our comprehensive library of research, guides, tools, and
            insights from 25+ years of pioneering work in security culture
            measurement.
          </p>
        </div>
      </div>
    </section>

    {/* Resource Categories */}
    <section class="py-20 bg-praxis-light-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Research & Whitepapers */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-blue rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Research & Whitepapers
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Academic research, industry reports, and peer-reviewed insights on
              security culture measurement.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Security Culture Framework
                </h4>
                <p class="text-xs text-praxis-gray">
                  The ENISA-adopted framework for measuring security culture
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Behavioral Security Research
                </h4>
                <p class="text-xs text-praxis-gray">
                  25+ years of academic research and findings
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Microsoft Graph Integration
                </h4>
                <p class="text-xs text-praxis-gray">
                  Technical whitepaper on API-based monitoring
                </p>
              </div>
            </div>
          </div>

          {/* Implementation Guides */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-green rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Implementation Guides
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Step-by-step guides for implementing security behavior monitoring
              in your organization.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Getting Started Guide
                </h4>
                <p class="text-xs text-praxis-gray">
                  Essential first steps for security culture measurement
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Microsoft Graph Setup
                </h4>
                <p class="text-xs text-praxis-gray">
                  Technical implementation for API integration
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Best Practices
                </h4>
                <p class="text-xs text-praxis-gray">
                  Proven methodologies for successful deployment
                </p>
              </div>
            </div>
          </div>

          {/* Tools & Templates */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-purple rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Tools & Templates
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Practical tools, templates, and calculators for security culture
              assessment and improvement.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  ROI Calculator
                </h4>
                <p class="text-xs text-praxis-gray">
                  Calculate the return on security culture investment
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Assessment Templates
                </h4>
                <p class="text-xs text-praxis-gray">
                  Ready-to-use templates for culture evaluation
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Reporting Dashboards
                </h4>
                <p class="text-xs text-praxis-gray">
                  Executive and operational reporting templates
                </p>
              </div>
            </div>
          </div>

          {/* Case Studies */}
          <div
            class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow"
          >
            <div
              class="w-16 h-16 bg-praxis-gold rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-praxis-dark-blue"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zM4 18v-6h3v7c0 .55.45 1 1 1h9c.55 0 1-.45 1-1v-7h3v6h4v2H0v-2h4z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-heading font-bold text-praxis-dark-blue mb-4 text-center"
            >
              Case Studies
            </h3>
            <p class="text-praxis-gray text-center mb-6">
              Real-world success stories and lessons learned from organizations
              implementing security culture measurement.
            </p>
            <div class="space-y-3">
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Fortune 500 Implementation
                </h4>
                <p class="text-xs text-praxis-gray">
                  10,000+ employee deployment case study
                </p>
              </div>
              <div class="border-b border-praxis-light-gray pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Mid-Market Success
                </h4>
                <p class="text-xs text-praxis-gray">
                  500-2,000 employee organization transformation
                </p>
              </div>
              <div class="pb-2">
                <h4 class="font-semibold text-praxis-dark-blue text-sm">
                  Regulatory Compliance
                </h4>
                <p class="text-xs text-praxis-gray">
                  Meeting compliance requirements with measurement
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Featured Resources */}
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2
            class="text-3xl font-heading font-bold text-praxis-dark-blue mb-6"
          >
            Featured Resources
          </h2>
          <p class="text-xl text-praxis-gray">
            Our most popular and impactful resources for security culture
            improvement.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {/* The Security Culture Playbook */}
          <div class="bg-praxis-light-gray p-8 rounded-lg">
            <div class="text-center mb-6">
              <div
                class="w-20 h-28 bg-praxis-dark-blue mx-auto mb-4 rounded flex items-center justify-center"
              >
                <span class="text-white font-bold text-xs">BOOK</span>
              </div>
              <h3
                class="text-xl font-heading font-bold text-praxis-dark-blue mb-2"
              >
                The Security Culture Playbook
              </h3>
              <p class="text-sm text-praxis-gray mb-4">
                Co-authored with Perry Carpenter (Wiley, 2022)
              </p>
            </div>
            <p class="text-praxis-gray text-sm mb-6">
              The definitive guide to building, measuring, and improving
              security culture in organizations of all sizes.
            </p>
            <a href="/contact" class="btn-outline w-full text-center block">
              Learn More
            </a>
          </div>

          {/* Security Culture Framework */}
          <div class="bg-praxis-light-gray p-8 rounded-lg">
            <div class="text-center mb-6">
              <div
                class="w-20 h-20 bg-praxis-blue rounded-full mx-auto mb-4 flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-xl font-heading font-bold text-praxis-dark-blue mb-2"
              >
                Security Culture Framework
              </h3>
              <p class="text-sm text-praxis-gray mb-4">
                Adopted by ENISA for EU Guidelines
              </p>
            </div>
            <p class="text-praxis-gray text-sm mb-6">
              The comprehensive framework for measuring and understanding
              security culture across seven key dimensions.
            </p>
            <a href="/contact" class="btn-outline w-full text-center block">
              Download Framework
            </a>
          </div>

          {/* ROI Calculator */}
          <div class="bg-praxis-light-gray p-8 rounded-lg">
            <div class="text-center mb-6">
              <div
                class="w-20 h-20 bg-praxis-green rounded-full mx-auto mb-4 flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M7,2V4H8V18A4,4 0 0,0 12,22A4,4 0 0,0 16,18V4H17V2H7M11,16C10.4,16 10,15.6 10,15C10,14.4 10.4,14 11,14C11.6,14 12,14.4 12,15C12,15.6 11.6,16 11,16M13,12C12.4,12 12,11.6 12,11C12,10.4 12.4,10 13,10C13.6,10 14,10.4 14,11C14,11.6 13.6,12 13,12M11,8C10.4,8 10,7.6 10,7C10,6.4 10.4,6 11,6C11.6,6 12,6.4 12,7C12,7.6 11.6,8 11,8Z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-xl font-heading font-bold text-praxis-dark-blue mb-2"
              >
                Security Culture ROI Calculator
              </h3>
              <p class="text-sm text-praxis-gray mb-4">
                Interactive Business Case Tool
              </p>
            </div>
            <p class="text-praxis-gray text-sm mb-6">
              Calculate the return on investment for your security culture
              measurement program with our comprehensive tool.
            </p>
            <a href="/contact" class="btn-outline w-full text-center block">
              Use Calculator
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Newsletter & Updates */}
    <section class="py-20 bg-praxis-dark-blue text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold mb-6">
          Stay Updated with New Resources
        </h2>
        <p class="text-xl text-praxis-light-blue mb-8">
          Get the latest research, tools, and insights delivered to your inbox.
          Join thousands of security professionals advancing their culture
          programs.
        </p>

        <div class="max-w-md mx-auto mb-8">
          <form class="flex flex-col sm:flex-row gap-3">
            <input
              type="email"
              placeholder="Enter your email address"
              class="flex-grow px-4 py-3 rounded-lg text-praxis-dark-blue"
              required
              aria-label="Email address for resource updates"
            />
            <button
              type="submit"
              class="btn-accent px-6 py-3 whitespace-nowrap"
              aria-label="Subscribe to resource updates"
            >
              Subscribe
            </button>
          </form>
        </div>

        <p class="text-sm text-praxis-light-blue">
          No spam, ever. Unsubscribe at any time. Privacy policy applies.
        </p>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-16 bg-praxis-light-gray">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-praxis-dark-blue mb-6">
          Ready to Implement These Resources?
        </h2>
        <p class="text-xl text-praxis-gray mb-8">
          Turn research into action with Praxis Navigator&rsquo;s comprehensive
          platform.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-accent"> Schedule a Consultation</a>
          <a href="/pricing" class="btn-secondary"> View Platform Pricing</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
