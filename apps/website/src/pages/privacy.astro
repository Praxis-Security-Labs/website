  '@type': 'WebPage',
  name: t.title,
  description: t.sections.introduction.content.substring(0, 160),
  url: Astro.url.href,
  mainEntity: {
    '@type': 'Article',
    headline: t.heading,
    dateModified: '2025-08-21',
    author: {
      '@type': 'Organization',
      name: 'Praxis Navigator',
    },
  },
};
---

<BaseLayout
  title={t.title}
  description={t.sections.introduction.content.substring(0, 160)}
  lang={lang}
  structuredData={structuredData}
  pageType="content"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="h1 mb-4">{t.heading}</h1>
      <p class="body-base text-praxis-brown">
        {t.lastUpdated}: {t.effectiveDate}
      </p>
    </div>

    <!-- Content -->
    <div class="prose max-w-none">
      <!-- Introduction -->
      <section class="mb-8">
        <h2 class="h3 mb-4">{t.sections.introduction.title}</h2>
        <p
          class="body-base text-praxis-black leading-relaxed"
          set:html={t.sections.introduction.content}
        />
      </section>

      <!-- Data Controller -->
      <section class="mb-8">
        <h2 class="h3 mb-4">{t.sections.dataController.title}</h2>
        <p
          class="body-base text-praxis-black leading-relaxed"
          set:html={t.sections.dataController.content}
        />
      </section>

      <!-- Information We Collect -->
      <section class="mb-8">
        <h2 class="h3 mb-4">{t.sections.informationCollected.title}</h2>
        <p
          class="body-base text-praxis-black leading-relaxed mb-4"
          set:html={t.sections.informationCollected.content}
        />

        {
          Object.entries(t.sections.informationCollected.subsections).map(
            ([, subsection]) => (
              <div class="mb-6">
                <h3 class="h5 mb-3">{subsection.title}</h3>
                <div
                  class="body-base text-praxis-black leading-relaxed"
                  set:html={subsection.content}
                />
              </div>
            )
          )
        }
      </section>

      <!-- Legal Basis -->
      <section class="mb-8">
        <h2 class="h3 mb-4">{t.sections.legalBasis.title}</h2>
        <div
          class="body-base text-praxis-black leading-relaxed"
          set:html={t.sections.legalBasis.content}
        />
      </section>

      <!-- How We Use Your Information -->
      <section class="mb-8">
        <h2 class="h3 mb-4">{t.sections.dataUse.title}</h2>
        <div
          class="body-base text-praxis-black leading-relaxed"
          set:html={t.sections.dataUse.content}
        />
      </section>

